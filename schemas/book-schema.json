{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://gist.github.com/ai-worm/schemas/xen/book-schema.json",
    "title": "Book schema",
    "description": "The Schema for a book in a Xen Project",
    "type": "object",
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "version": {
                    "type": "string",
                    "description": "The book version.",
                    "default": "1.0"
                },
                "title": {
                    "type": "string",
                    "description": "The title of the book.",
                    "default": "Untitled"
                },
                "abstract": {
                    "type": "string",
                    "description": "An overview of the book.",
                    "default": "No description."
                },
                "synopsis": {
                    "type": "string",
                    "description": "A short description of the book.",
                    "default": "No synopsis."
                },
                "author": {
                    "type": "array",
                    "description": "A list of the author(s) of the book.",
                    "items": {
                        "type": "object",
                        "description": "The author of the book.",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "The name of the author."
                            },
                            "xen_profile": {
                                "type": "string",
                                "description": "The url to the author's xen profile."
                            }
                        }
                    },
                    "default": [
                        {
                            "name": "Anonymous",
                            "xen_profile": "https://gist.github.com/ai-worm"
                        }
                    ]
                },
                "illustrator": {
                    "type": "array",
                    "description": "A list of the illustrator(s) of the book.",
                    "items": {
                        "type": "object",
                        "description": "The illustrator of the book.",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "The name of the illustrator."
                            },
                            "xen_profile": {
                                "type": "string",
                                "description": "The url to the illustrator's xen profile."
                            }
                        }
                    },
                    "default": [
                        {
                            "name": "Anonymous",
                            "xen_profile": "https://gist.github.com/ai-worm"
                        }
                    ]
                },
                "editor": {
                    "type": "array",
                    "description": "A list of the editor(s) of the book.",
                    "items": {
                        "type": "object",
                        "description": "The editor of the book.",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "The name of the editor."
                            },
                            "xen_profile": {
                                "type": "string",
                                "description": "The url to the editor's xen profile."
                            }
                        }
                    },
                    "default": [
                        {
                            "name": "Anonymous",
                            "xen_profile": "https://gist.github.com/ai-worm"
                        }
                    ]
                },
                "publisher": {
                    "type": "object",
                    "description": "The publisher of the book.",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "The name of the publisher."
                        },
                        "xen_profile": {
                            "type": "string",
                            "description": "The url to the publisher's xen profile."
                        }
                    },
                    "default": {
                        "name": "Anonymous",
                        "xen_profile": "https://gist.github.com/ai-worm"
                    }
                },
                "license": {
                    "type": "string",
                    "description": "The license of the Xen file.",
                    "default": "CC-BY",
                    "enum": [
                        "CC0",
                        "CC-BY",
                        "CC-BY-SA",
                        "CC-BY-ND",
                        "CC-BY-NC",
                        "CC-BY-NC-SA",
                        "CC-BY-NC-ND"
                    ]
                },
                "tags": {
                    "type": "array",
                    "description": "The tags of the book.",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "categories": {
                    "type": "array",
                    "description": "The categories of the book.",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                }
            }
        },
        "chapters": {
            "type": "array",
            "description": "The chapters of the book.",
            "items": {
                "type": "object",
                "description": "The chapter of the book.",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "The title of the chapter.",
                        "default": "Untitled"
                    },
                    "description": {
                        "type": "string",
                        "description": "A quick description of the chapter.",
                        "default": "No description."
                    },
                    "content_blocks": {
                        "type": "array",
                        "description": "The blocks of content in the chapter.",
                        "items": {
                            "type": "object",
                            "description": "The block of content in the chapter.",
                            "properties": {
                                "block_type": {
                                    "type": "string",
                                    "description": "The type of block.",
                                    "default": "paragraph",
                                    "enum": [
                                        "paragraph",
                                        "heading",
                                        "code",
                                        "quote",
                                        "list",
                                        "table",
                                        "image",
                                        "video",
                                        "audio"
                                    ]
                                },
                                "content": {
                                    "type": "array",
                                    "description": "The content of the block.",
                                    "items": {
                                        "type": "object",
                                        "description": "The type of content of the block.",
                                        "properties": {
                                            "content_type": {
                                                "type": "string",
                                                "description": "The type of content.",
                                                "default": "normal_text",
                                                "enum": [
                                                    "normal_text",
                                                    "code_text",
                                                    "heading_1",
                                                    "heading_2",
                                                    "heading_3",
                                                    "heading_4",
                                                    "heading_5",
                                                    "heading_6",
                                                    "hyperlink"
                                                ]
                                            },
                                            "content_text": {
                                                "type": "object",
                                                "description": "The text of the content.",
                                                "properties": {
                                                    "text": {
                                                        "type": "string",
                                                        "description": "The text of the content."
                                                    },
                                                    "text_style": {
                                                        "type": "array",
                                                        "description": "The style of the text.",
                                                        "items": {
                                                            "type": "string",
                                                            "description": "The style options.",
                                                            "enum": [
                                                                "bold",
                                                                "italic",
                                                                "underline",
                                                                "strike_through"
                                                            ]
                                                        }
                                                    }
                                                }
                                            },
                                            "content_url": {
                                                "type": "string",
                                                "description": "The url of the content. Used for links, images and audio/video."
                                            },
                                            "content_id": {
                                                "type": "string",
                                                "description": "The id tag of the content. Used for navigation in the table of contents."
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "tags": {
                        "type": "array",
                        "description": "The tags of the chapter.",
                        "items": {
                            "type": "string"
                        },
                        "default": []
                    }
                }
            }
        }
    },
    "required": [
        "meta"
    ]
}